<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
  
  <listener>
      <listener-class>com.realtalkserver.util.APIKeyInitializer</listener-class>
      <load-on-startup>1</load-on-startup>
  </listener>

  <servlet>
      <servlet-name>registerId</servlet-name>
      <servlet-class>com.realtalkserver.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>registerId</servlet-name>
      <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>unregisterId</servlet-name>
      <servlet-class>com.realtalkserver.servlet.UnregisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>unregisterId</servlet-name>
      <url-pattern>/unregister</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>authenticateUser</servlet-name>
      <servlet-class>com.realtalkserver.servlet.AuthenticateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>authenticateUser</servlet-name>
      <url-pattern>/authenticate</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>changePwd</servlet-name>
      <servlet-class>com.realtalkserver.servlet.PasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>changePwd</servlet-name>
      <url-pattern>/changePwd</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>changeRegId</servlet-name>
      <servlet-class>com.realtalkserver.servlet.RegistrationIdServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>changeRegId</servlet-name>
      <url-pattern>/changeRegId</url-pattern>
  </servlet-mapping>
  <!-- Chat Room Servlets -->
  <servlet>
      <servlet-name>addRoom</servlet-name>
      <servlet-class>com.realtalkserver.servlet.AddRoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>addRoom</servlet-name>
      <url-pattern>/addRoom</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>joinRoom</servlet-name>
      <servlet-class>com.realtalkserver.servlet.JoinRoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>joinRoom</servlet-name>
      <url-pattern>/joinRoom</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>leaveRoom</servlet-name>
      <servlet-class>com.realtalkserver.servlet.LeaveRoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>leaveRoom</servlet-name>
      <url-pattern>/leaveRoom</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>postMessage</servlet-name>
      <servlet-class>com.realtalkserver.servlet.PostMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>postMessage</servlet-name>
      <url-pattern>/post</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>getRecentChat</servlet-name>
      <servlet-class>com.realtalkserver.servlet.GetRecentChatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>getRecentChat</servlet-name>
      <url-pattern>/pullRecentChat</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>getChatLog</servlet-name>
      <servlet-class>com.realtalkserver.servlet.GetChatLogServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>getChatLog</servlet-name>
      <url-pattern>/pullChat</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>nearbyRooms</servlet-name>
      <servlet-class>com.realtalkserver.servlet.NearbyRoomsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>nearbyRooms</servlet-name>
      <url-pattern>/nearbyRooms</url-pattern>
  </servlet-mapping>
</web-app>
